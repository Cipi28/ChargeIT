<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <style>
        td, th, h1{
            font-family: Optima, sans-serif
        }

    </style>
</head>
<body>
<br><br><H1><center>Available Plugs</center></H1><br>
{#<a href="/{{ app.user ? 'logout' : 'login' }}" @click="isOpen = false">#}
{#{{ app.user ? 'Logout' : 'Login' }}#}
{#</a>#}
<br>
<div class="table-responsive" style="width: 85%; margin: auto">
    <table class="table table-striped table-borderless">
        <tr>
            <th scope="col">Station Name</th>
            <th scope="col">Plug Type</th>
            <th scope="col">Select the plug</th>
        </tr>
        {% for plug in availablePlugs %}
            <tr>
                <td scope="row">{{ plug.getStationId().getName() }}</td>
                <td>{{ plug.getType() }}</td>
                <td><a style="background: lightblue" class="border-0 btn btn-outline-light " href="{{ path('select_plug', {'plug_id':plug.getId(), 'booking_id':booking_id}  )}}">Select</a></td>
            </tr>
        {% endfor %}
    </table>
</div>
<br>
{#<center><a style="background: lightblue" class="border-0 btn btn-outline-light rounded-pill" href="/new-station">Add Station</a></center>#}
<br><br>
</body>
</html>